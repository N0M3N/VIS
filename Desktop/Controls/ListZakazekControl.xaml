<UserControl x:Class="Desktop.Controls.ListZakazekControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Controls"
             xmlns:extensions="clr-namespace:Desktop.Extensions"
             DataContext="{extensions:Resolve local:ListZakazekViewModel}"
             d:DataContext="{d:DesignInstance Type=local:ListZakazekViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">

    <DockPanel LastChildFill="False">
        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding Zakazky}" SelectedItem="{Binding Selected.Value}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazev" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Zakaznik" Binding="{Binding Zakaznik.Jmeno}" />
                <DataGridTextColumn Header="Adresa" Binding="{Binding Adresa}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}">Continue</Button>
    </DockPanel>
</UserControl>
